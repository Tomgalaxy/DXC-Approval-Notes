	g_scratchpad.location = getlbu.sys_id;
	
	//exchange rate field initialization
	fRate.orderByDesc('created');
	fRate.addQuery('currency', current.local_currency);
	fRate.query();
	fRate.next();
	current.exchange_rate = fRate.rate;
	
